<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rowJKNull"
        android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:text="Jadwal Kuliah Kosong"/>
    </RelativeLayout>


    <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hari"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/rowhariJKn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/myCardview"
        app:contentPadding="4dp"
        app:cardCornerRadius="3dp"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:id="@+id/gariskirin">

        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:id="@+id/rowJamjkn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:textColor="#3b3b3b"
            android:text="19:00"
            android:scaleType="centerCrop"/>
        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowJamjkn"
            android:textSize="16sp"
            android:textColor="#3b3b3b"
            android:text="18:00"
            android:id="@+id/rowJamjk2n"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutpartnerjkn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/gariskirin"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/menuOptionJKn"

            android:background="@null"
            app:srcCompat="@drawable/ic_more_gray_24px" />

        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:id="@+id/rowMakuln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/menuOptionJKn"
            android:textColor="#3b3b3b"
            android:layout_gravity="left"
            android:text="Makul"
            android:maxLines="1"
            android:scaleType="centerCrop"
            android:textSize="16sp"
            android:textStyle="bold" />
        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowMakuln"
            android:textColor="#3b3b3b"
            android:maxLines="1"
            android:text="Dosen"
            android:id="@+id/rowDosenn"/>



        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3b3b3b"
            android:layout_below="@id/rowDosenn"
            android:layout_alignParentRight="true"
            android:text="Ada Tugas"
            android:id="@+id/rowstatusTugasJKn"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iconTugasRowJKn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowDosenn"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/rowstatusTugasJKn"
            app:srcCompat="@drawable/ic_check_green_16px" />
        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowDosenn"
            android:textColor="#3b3b3b"
            android:scaleType="centerCrop"
            android:gravity="left"
            android:layout_toLeftOf="@id/iconTugasRowJKn"

            android:maxLines="1"
            android:text="Ruangan"
            android:id="@+id/rowRuanganjkn"/>


    </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
