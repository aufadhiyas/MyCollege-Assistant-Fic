<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.citrafa.mycollegeassistant.SplashScreen">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="#383547"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/iconapp"
            android:id="@+id/splashImage"/>
        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/splashImage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:id="@+id/splashContentTitle"
            android:layout_centerHorizontal="true"
            android:text="MyCollege Assistant"/>
        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/splashContentTitle"
            android:layout_centerHorizontal="true"
            android:id="@+id/splashContentSubTitle"
            android:text="Asisten Pribadi Di Smartphone Kamu"/>

    </RelativeLayout>
</RelativeLayout>


</RelativeLayout>
