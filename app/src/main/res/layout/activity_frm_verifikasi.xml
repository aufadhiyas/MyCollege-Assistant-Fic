<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    tools:context="me.citrafa.mycollegeassistant.Activity.frmVerifikasi">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_centerInParent="true">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/verifikasi_icon"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/iconapp"/>
        <me.citrafa.mycollegeassistant.CustomWidget.tvMuseo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verifikasi_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Masukkan Kode Verifikasi Kamu"
            android:id="@+id/lbl1ver"/>

        <me.citrafa.mycollegeassistant.CustomWidget.etMuseo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl1ver"
            android:layout_marginTop="20dp"
            android:minWidth="300dp"
            android:id="@+id/verifikasi_kode"
            android:inputType="number"
            android:textAlignment="center"
            android:hint="Kode Verivikasi" />
        <me.citrafa.mycollegeassistant.CustomWidget.btnMuseo
            style="@style/myButton"
            android:layout_below="@id/verifikasi_kode"
            android:layout_width="wrap_content"
            android:minWidth="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/verifikasibtnVerif"
            android:text="Verifikasi" />
    </RelativeLayout>

</RelativeLayout>
