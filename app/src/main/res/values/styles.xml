<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AndroidKu" parent="Theme.Guillotine">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

    <style name="Theme.Guillotine" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="myButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/primary_text_material_light</item>
        <item name="android:background">@drawable/mybuttonfirstform</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="myButton2" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/mybuttonfirstform1</item>
    </style>
    <style name="myButtonNoBorder" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#000000</item>
        <item name="android:colorPressedHighlight">@color/guillotine_background</item>
        <item name="android:colorLongPressedHighlight">@color/guillotine_background</item>
    </style>

    <style name="myEditText" parent="Base.V7.Widget.AppCompat.EditText">

    </style>
    <style name="myMenuIcon" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/menuiconround</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="myEditTextForm" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:textColorHint">#9999</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImageView.Hamburger" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">
            @dimen/abc_action_bar_overflow_padding_start_material
        </item>
    </style>
    <style name="mySpinner" parent="Theme.AppCompat.Light">
        <item name="background">@color/guillotine_background</item>
    </style>
    <style name="myPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">#212121</item>
    </style>
    <style name="myCardview" parent="CardView.Light">
        <item name="cardBackgroundColor">#ffff</item>
    </style>
</resources>
